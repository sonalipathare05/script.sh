
#!/bin/bash
set -e

# Install Apache only if not installed
if ! rpm -q httpd >/dev/null 2>&1; then
  yum install httpd -y
fi

# Start & enable Apache
systemctl start httpd
systemctl enable httpd

# Create web content
echo "hello from Git and Jenkins" > /var/www/html/index.html

# Secure permissions
chmod 644 /var/www/html/index.html
